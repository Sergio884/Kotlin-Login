<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyContact"
    android:background="@drawable/style_background_main"
    >

    <TextView
        android:id="@+id/tv_tituloDatosViaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ConfiguraciÃ³n del Viaje"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Digite la tolerancia en metros de la cual se puede salir de su ruta"
        app:layout_constraintTop_toBottomOf="@+id/tv_tituloDatosViaje"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/et_radioTolerancia"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_field"
        android:drawableStart="@drawable/ic_compas"
        android:drawablePadding="10dp"
        android:padding="16dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/Grey"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digita el radio de tolerancia Ej:100"
        android:inputType="phone"
        android:digits="0123456789"
        />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Digite la tolerancia en minutos de la cual se puede salir de su ruta"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_radioTolerancia"
        />

    <EditText
        android:id="@+id/et_tiempoTolerancia"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_field"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="10dp"
        android:padding="16dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/Grey"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digita el tiempo de tolerancia Ej:5"
        android:inputType="phone"
        android:digits="0123456789"
        />

    <TextView
        android:id="@+id/tv_radioLlegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Digite la el radio de llegada"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_tiempoTolerancia"
        />

    <EditText
        android:id="@+id/et_radioLlegada"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ic_field"
        android:drawableStart="@drawable/ic_flag"
        android:drawablePadding="10dp"
        android:padding="16dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/Grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_radioLlegada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Digita el radio de llegada Ej:100"
        android:inputType="phone"
        android:digits="0123456789"
        />


    <TextView
        android:id="@+id/tv_irARecorrido"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/style_button_background"
        android:gravity="center"
        android:padding="15dp"
        android:text="Comenzar recorrido"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>